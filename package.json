{
  "name": "rwa-tokenization-platform",
  "version": "1.0.0",
  "description": "RWA Tokenization Platform with Fireblocks Integration",
  "main": "backend/server.js",
  "scripts": {
    "dev": "nodemon backend/server.js",
    "start": "node backend/server.js",
    "build": "echo 'No build step required'",
    "compile": "npx hardhat compile --force",
    "deploy": "npx hardhat run scripts/deploy.js --force",
    "deploy-amoy": "npx hardhat run scripts/deploy.js --network amoy --force",
    "test": "npx hardhat test --force",
    "copy-abis": "node copy-abis.js",
    "setup": "npm run compile && npm run copy-abis",
    "dev-full": "npm run setup && npm run dev",
    "frontend": "cd frontend && npm start",
    "build-frontend": "cd frontend && npm run build"
  },
  "engines": {
    "node": "18.x"
  },
  "keywords": [
    "blockchain",
    "RWA",
    "tokenization",
    "polygon",
    "fireblocks"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@nomiclabs/hardhat-ethers": "2.2.3",
    "@nomiclabs/hardhat-waffle": "2.0.6",
    "@openzeppelin/contracts": "4.9.3",
    "axios": "^1.12.2",
    "cors": "2.8.5",
    "dotenv": "16.3.1",
    "ethers": "5.7.2",
    "express": "4.18.2",
    "fireblocks-sdk": "^5.38.0",
    "hardhat": "2.19.0",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "20.8.0",
    "chai": "4.3.10",
    "nodemon": "3.0.1",
    "ts-node": "10.9.1",
    "typescript": "5.2.2"
  }
}
